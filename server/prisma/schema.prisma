generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model student {
  id       String          @id
  name     String
  sgpa     Float
  cgpa     Float
  subjects subjectResult[] @relation("student_subjects")
}

model subjectResult {
  id             String  @id
  name           String
  code           String
  theoryGrade    String?
  practicalGrade String?
  studentId      String
  student        student @relation("student_subjects", fields: [studentId], references: [id])
}